FROM unit9/base:latest
MAINTAINER Kamil Cholewi≈Ñski <kamil.cholewinski@unit9.com>

RUN curl -fsS https://sensu.global.ssl.fastly.net/apt/pubkey.gpg \
    | apt-key add - \
    && echo "deb https://sensu.global.ssl.fastly.net/apt sensu main" \
    > /etc/apt/sources.list.d/sensu.list \
    && apt-get update \
    && apt-get install --yes --no-install-recommends \
       sensu \
    && rm -rf /var/cache/apt /var/lib/apt/lists \
    && ls -ld /opt/sensu/bin/sensu-*

RUN /opt/sensu/embedded/bin/gem install sensu-plugin

ENV PATH=/opt/sensu/bin:/opt/sensu/embedded/bin:$PATH
ADD check-kube.rb /etc/sensu/plugins/
ADD sensu-client.run /etc/service/sensu-client/run
ADD rc.local /etc/rc.local
